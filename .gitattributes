# Text files (source code, config, etc.)
*.swift     text eol=lf
*.h         text eol=lf
*.m         text eol=lf
*.mm        text eol=lf
*.xib       text eol=lf
*.storyboard text eol=lf
*.plist     text eol=lf
*.json      text eol=lf
*.xml       text eol=lf
*.md        text eol=lf
*.txt       text eol=lf

# Images (binary files)
*.png       binary
*.jpg       binary
*.jpeg      binary
*.gif       binary
*.heic      binary
*.webp      binary
*.svg       text eol=lf

# Asset Catalogs (binary)
*.xcassets  binary

# Swift Package Manager files
Package.resolved text eol=lf

# Xcode project files (some are better treated as text)
*.xcodeproj/* merge=union
*.xcworkspace/* merge=union

# SQLite files (binary, for SwiftData/SwiftData migrations)
*.sqlite    binary
*.sqlite-wal binary
*.sqlite-shm binary

# Other binary formats
*.pdf       binary
*.mp4       binary
*.mov       binary